{
    "languageserver": {
        "intelephense": {
            "command": "~/bin/npx intelephense",
            "args": ["--stdio"],
            "filetypes": ["php"],
            "initializationOptions": {
                "storagePath": "/tmp/intelephense"
            }
        }
    },
    "snippets": {
        "ultisnips": {
            "directories": [
                "~/bin/vim-config/snippets"
            ]
        }
    }
}
