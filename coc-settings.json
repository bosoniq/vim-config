{
    "languageserver": {
        "intelephense": {
            "command": "~/bin/npx intelephense",
            "args": ["--stdio"],
            "filetypes": ["php"],
            "initializationOptions": {
                "storagePath": "/tmp/intelephense"
            }
        }
    },
    "intelephense.composer.path": "~/bin/composer",
    "snippets.ultisnips.directories": ["CONFIGDIR/snippets"],
    "coc.preferences.extensionUpdateCheck": "daily",
    "phpstan.toolPath": "CONFIGDIR/vendor/bin/phpstan",
    "phpstan.level": "9"
}
